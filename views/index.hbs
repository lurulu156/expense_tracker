<div class="col-4 mt-5 mx-auto">
  <div class="mb-2 mt-2" style="width: 100%;">
    <form action="/">
      <select class="form-select" id="sort" name="sort" onchange="this.form.submit()" required="true">
        <option value="">類別</option>
        <option value="家居物業" {{{select sort.name '家居物業' }}}>家居物業</option>
        <option value="交通出行" {{{select sort.name '交通出行' }}}>交通出行</option>
        <option value="休閒娛樂" {{{select sort.name '休閒娛樂' }}}>休閒娛樂</option>
        <option value="餐飲食品" {{{select sort.name '餐飲食品' }}}>餐飲食品</option>
        <option value="其他" {{{select sort.name '其他' }}}>其他</option>
      </select>
      </select>
    </form>
  </div>
</div>
<div class="col-8 mx-auto d-flex justify-content-center mt-5">
  <div class="col-6 d-flex justify-content-between">
    <span style="font-weight: 700; font-size: 25px">總金額:</span>
    <span style="color:rgb(211, 72, 17); font-weight: 700; font-size: 50px">{{totalAmount}}</span>
  </div>
</div>
<div class="col-8 mx-auto d-flex justify-content-center mt-3">
  <div class="col-6">
    <table class="table table-borderless" style="width:150%; text-align:center; vertical-align: middle;">
      <tbody>
        {{#each expenses}}
        <tr>
          <td {{#ifEven @index}} class="table-secondary" {{/ifEven}} style="width:10%"><i
              class="{{this.category.image}} fa-xl"></i></td>
          <td {{#ifEven @index}} class="table-secondary" {{/ifEven}} style="width:50%;text-align:start">{{this.name}} <p
              style="margin:0">{{this.date}}
            </p>
          </td>
          <td {{#ifEven @index}} class="table-secondary" {{/ifEven}} style="width:10%">{{this.price}}
          </td>
          <td><a href="/expense/{{this._id}}/edit" style="text-decoration: none; color:black;">修改</a>
          </td>
          <td>
            <form action="/expense/{{this._id}}?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-outline-secondary" onclick="return confirm('確定要刪除嗎?');">刪除</button>
            </form>
          </td>
        </tr>
        {{/each}}
    </table>
  </div>
</div>
<div class="mt-5 d-flex justify-content-center">
  <a href="/expense/new" class="btn btn-outline-danger" style="width: 15rem;">新增支出</a>
</div>