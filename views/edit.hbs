<div class="container">
  <div class="row ">
    <form action="/expense/{{expense._id}}?_method=PUT" method="POST">
      <div class="row justify-content-md-center">
        <div class="mb-3 col-6">
          <p class="mt-3 text-center">*必填欄位 請輸入你的支出</p>
          <label for="name" class="form-label mt-1">名稱*</label>
          <input type="text" class="form-control" id="name" placeholder="" name="name" value="{{expense.name}}"
            required="true">
          <label for="date" class="form-label mt-2">日期</label>
          <input type="date" class="form-control" id="date" placeholder="" name="date" value="{{expense.date}}">
          <label for="category" class="form-label mt-2">類別*</label>
          <select class="form-select" id="category" name="category" required="true">
            <option value="">類別</option>
            <option value="家居物業" {{{select expense.category '家居物業'}}}>家居物業</option>
            <option value="交通出行" {{{select expense.category '交通出行'}}}>交通出行</option>
            <option value="休閒娛樂" {{{select expense.category '休閒娛樂'}}}>休閒娛樂</option>
            <option value="餐飲食品" {{{select expense.category '餐飲食品'}}}>餐飲食品</option>
            <option value="其他" {{{select expense.category '其他'}}}>其他</option>
          </select>
          <label for="price" class="form-label mt-2">金額*</label>
          <input type="number" class="form-control" id="price" placeholder="請填數字" name="price" value="{{expense.price}}"
            required="true">
        </div>
      </div>
      <div class="col d-flex justify-content-center">
        <button type="submit" class="btn btn-primary">送出</button>
      </div>
    </form>
  </div>
</div>